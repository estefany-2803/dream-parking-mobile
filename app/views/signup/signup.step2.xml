<Page loaded="loaded" actionBarHidden="false" backgroundSpanUnderStatusBar="true">
	<Page.actionBar>
    <ActionBar title="Crear cuenta: Paso 2">
    	<NavigationButton text="Volver" android.systemIcon="ic_menu_back" tap="onBack"/>
    </ActionBar>
  </Page.actionBar>

	<ScrollView verticalAlignment="top">
		<GridLayout columns="*" rows="*, *, *, *">

			<StackLayout row="0" class="signup-view"
				paddingRight="20" paddingLeft="20" paddingTop="20" >

				<Image src="~/shared/images/icon.png" stretch="false" 
					horizontalAlignment="center"
					verticalAlignment="center"/> 

				<Label class="title"
					text="Cuenta Potato Koosh"/>

				<Label text="Datos de la cuenta" />

				<TextField 
					id="email"
					text="{{ email }}"
					hint="Correo Electrónico" 
					keyboardType="email" 
					autocorrect="false" 
					autocapitalizationType="none" />

				<TextField 
					id="nickname"
					text="{{ nickname }}"
					hint="@Nickname" 
					keyboardType="email"
					autocorrect="false" 
					autocapitalizationType="none" />
				
				<TextField 
					id="password"
					text="{{ password }}"
					hint="Contraseña" secure="true" />

				<TextField 
					id="first"
					hint="Nombre"
					text="{{ first }}" 
					autocorrect="false" 
					autocapitalizationType="words" />

				<TextField 
					id="last"
					text="{{ last }}" 
					hint="Apellido" 
					autocorrect="false" 
					autocapitalizationType="words" />

				<TextField 
					id="phone"
					text="{{ phone }}" 
					hint="Teléfono" 
					keyboardType="phone" 
					autocorrect="false" 
					autocapitalizationType="none" />

				<TextField 
					id="birth"
					isUserInteractionEnabled="false"
					text="{{ birth }}" 
					hint="Fecha de nacimiento" 
					keyboardType="birth"
					tap="{{ openDatePicker }}" 
					autocorrect="false" 
					autocapitalizationType="none" />
			</StackLayout>

			<StackLayout row="1" paddingRight="20" paddingLeft="20" paddingTop="20">
				<Label text="Sexo" />
				<SegmentedBar 
					id="sex" 
					style="vertical-align: center; margin: 20;" 
					items="{{sexItems}}"
					selectedIndexChanged="{{selectSelectSegment}}">
			  </SegmentedBar>
			</StackLayout>

			<StackLayout row="3"
				paddingRight="20" paddingLeft="20" paddingTop="20" paddingBottom="20">
				<Switch checked="false" hint="hello"  verticalAlignment="center" horizontalAlignment="right"/>
				<Button text="CREAR CUENTA" tap="onCreateAccount" class="color--accent text--white" />
			</StackLayout>
		</GridLayout>
	</ScrollView>
</Page>